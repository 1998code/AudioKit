import XCPlayground
import AudioKit

//: Change the source to "mic" to process your voice
let source = "player"

//: This is set-up, the next thing to change is in the next section:
let audiokit = AKManager.sharedInstance
let mic = AKMicrophone()
let file = NSBundle.mainBundle().pathForResource("PianoBassDrumLoop", ofType: "wav")
let player = AKAudioPlayer(file!)
let playerWindow: AKAudioPlayerWindow
let <%= au_name.uncapitalize %>: AKAU<%= au_name %>

switch (source) {
case "mic":
    <%= au_name.uncapitalize %> = AKAU<%= au_name %>(mic)
default:
    <%= au_name.uncapitalize %> = AKAU<%= au_name %>(player)
    playerWindow = AKAudioPlayerWindow(player)
}
//: Set the parameters of the Peak Limiter here
<% parameters.each do |parameter| -%>
<%= au_name.uncapitalize %>.<%= parameter[:variable] %> = <%= parameter[:default] %> // <%= parameter[:type] %>
<% end -%>

var <%= au_name.uncapitalize %>Window = AKAU<%= au_name %>Window(<%= au_name.uncapitalize %>)

audiokit.audioOutput = <%= au_name.uncapitalize %>
audiokit.start()

XCPlaygroundPage.currentPage.needsIndefiniteExecution = true

